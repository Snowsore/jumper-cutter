<!DOCTYPE html>
head
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
	
	link(rel="stylesheet" href="/node_modules/alertifyjs/build/css/alertify.min.css")
	link(rel="stylesheet" href="/node_modules/alertifyjs/build/css/themes/default.min.css")
	link(rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css")

	title Snowsore JumperCutter

body(class="bg-dark")
	div(class="d-flex flex-column")
		div(class="d-flex justify-content-center m-5")
			h1(class="text-light display-1" style="text-shadow:-10px -10px 20px #fff, 10px -10px 20px #fff, -10px 10px 20px #fff, 10px 10px 20px #fff;") JumperCutter
		div(class="d-flex justify-content-center m-3")
			div(class="bg-light rounded w-50 p-3")
				form(method="POST" action="/")
					input(type="text" class="form-control" name="url" autocomplete="off")
		div(class="d-flex justify-content-center m-3")
			div(class="bg-light rounded w-50 p-3")
				form(method="POST" action="/files" enctype="multipart/form-data")
					input(type="file" class="form-control-file" name="files" multiple)
		div(id="outputTable" class="d-flex flex-wrap align-content-start justify-content-center")
		div(class="d-flex justify-content-center")
			h1(class="text-light font-italic") by Snowsore

script(src="/node_modules/jquery/dist/jquery.min.js")
script(src="/node_modules/@popperjs/core/dist/umd/popper.min.js")
script(src="/node_modules/bootstrap/dist/js/bootstrap.min.js")
script(src="/node_modules/alertifyjs/build/alertify.min.js")
script(src="/node_modules/socket.io/client-dist/socket.io.js")
script
	include index.js